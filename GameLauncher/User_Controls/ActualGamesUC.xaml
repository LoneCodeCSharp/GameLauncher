<UserControl x:Class="GameLauncher.User_Controls.ActualGamesUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameLauncher.User_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="180" Name="actualItem">
    <Border Width="150" Height="180" CornerRadius="10" Margin="15 0 0 0">
        <Border.Background>
            <ImageBrush ImageSource="{Binding ElementName=actualItem, Path=ImageGame}"/>
        </Border.Background>
        <Border Width="50" Height="20" Background="#252525" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10 0 0 10" CornerRadius="2" >
            <TextBlock Text="{Binding ElementName=actualItem, Path=Price}" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
        </Border>
    </Border>
</UserControl>
